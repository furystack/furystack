{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier", "tslint-consistent-codestyle"],
  "rules": {
    "jsx-no-lambda": false,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "member-ordering": false,
    "object-literal-sort-keys": [false],
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "completed-docs": [
      true,
      {
        "classes": { "visibilities": ["exported"] },
        "enums": { "visibilities": ["exported"] },
        "enum-members": { "visibilities": ["exported"] },
        "functions": { "visibilities": ["exported"] },
        "interfaces": { "visibilities": ["exported"] },
        "properties": { "locations": "all", "privacies": ["public", "protected"] },
        "methods": {
          "locations": "all",
          "privacies": ["public", "protected"],
          "tags": { "content": {}, "existence": ["inheritdoc"] }
        },
        "types": { "visibilities": ["exported"] },
        "variables": { "visibilities": ["exported"] }
      }
    ],
    "interface-name": false,
    "no-console": [false, "log", "error"],
    "naming-convention": [
      true,
      {
        "type": "default",
        "format": ["camelCase", "PascalCase"],
        "leadingUnderscore": "forbid",
        "trailingUnderscore": "forbid"
      },
      { "type": "variable", "modifiers": ["global", "const"], "format": ["camelCase", "UPPER_CASE", "PascalCase"] },
      {
        "type": "functionVariable",
        "modifiers": ["const"],
        "format": ["PascalCase", "camelCase"]
      },
      {
        "type": "methodName",
        "modifiers": ["const"],
        "format": ["camelCase"]
      },
      { "type": "parameter", "modifiers": "unused", "leadingUnderscore": "allow" },
      { "type": "member", "modifiers": "private", "leadingUnderscore": "allow" },
      { "type": "member", "modifiers": "method", "format": ["PascalCase", "camelCase"] },
      { "type": "member", "modifiers": "protected", "leadingUnderscore": "allow" },
      { "type": "member", "modifiers": "public", "format": "PascalCase" },
      { "type": "property", "modifiers": ["public", "static", "const"], "format": "UPPER_CASE" },
      { "type": "type", "format": "PascalCase" },
      { "type": "interface", "format": "PascalCase" },
      { "type": "genericTypeParameter", "format": "PascalCase" },
      { "type": "enumMember", "format": "PascalCase" }
    ],
    "no-unnecessary-type-annotation": true
  },
  "rulesDirectory": []
}
