{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "jsx": "react",
    "jsxFactory": "createComponent",
    "jsxFragmentFactory": "createComponent",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src", "src/**/*.json"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../inject"
    },
    {
      "path": "../logging"
    },
    {
      "path": "../repository"
    },
    {
      "path": "../shades"
    },
    {
      "path": "../shades-common-components"
    },
    {
      "path": "../shades-lottie"
    },
    {
      "path": "../shades-nipple"
    },
    {
      "path": "../utils"
    }
  ]
}
