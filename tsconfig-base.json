{
  "compilerOptions": {
    "pretty": true,
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "declarationMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "createComponent"
  }
}
