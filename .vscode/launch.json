  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Jest tests",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "node",
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--testTimeout=99999999"
      ],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Jest tests",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "node",
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",

        "${fileBasenameNoExtension}",
        "--runInBand",
        "--testTimeout=99999999"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
