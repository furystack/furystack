{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "backend",
      "program": "${workspaceFolder}/examples/repository/dist/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "odata-fetchr",
      "program": "${workspaceFolder}/packages/odata-fetchr/dist/odata-fetchr.js",
      "args": ["workspace", "@furystack/example-repository", "odata-fetchr"],
      "cwd": "${workspaceFolder}/examples/repository"
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "args": ["--runInBand", "--coverage", "false"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    }
  ]
}
