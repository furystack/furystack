{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Onboard",
      "program": "${workspaceFolder}/packages/onboard/dist/index.js",
      "args": ["---parallel=3", "--stepFilters=AddToPm2"],
      "cwd": "${input:workdir}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        // "NODE_DEBUG": "cluster,net,http,fs,tls,module,timers"
      }
    },
    {
      "name": "ExampleRepository Service",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceFolder}/examples/repository/src/index.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}/examples/repository",
      "protocol": "inspector"
    },
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "odata-fetchr",
      "program": "${workspaceFolder}/packages/odata-fetchr/dist/odata-fetchr.js",
      "args": ["workspace", "@furystack/example-repository", "odata-fetchr"],
      "cwd": "${workspaceFolder}/examples/repository"
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "args": ["--runInBand", "--coverage", "false"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "workdir",
      "description": "The working directory",
      "default": "C:\\development\\plano-in"
    }
  ]
}
