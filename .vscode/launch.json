{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest tests",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "jest", "--runInBand"],
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Onboard",
      "program": "${workspaceFolder}/packages/onboard/dist/index.js",
      // "args": ["---parallel=3", "--stepFilters=AddToPm2"],
      "cwd": "${input:workdir}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        // "NODE_DEBUG": "cluster,net,http,fs,tls,module,timers"
      }
    },
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "workdir",
      "description": "The working directory",
      "default": "C:\\development\\plano-in"
    }
  ]
}
