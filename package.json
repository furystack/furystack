{
  "private": true,
  "version": "1.0.0-2019-06-10",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": []
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsdoc": "^15.8.1",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "jest-junit": "^8.0.0",
    "lerna": "^3.13.4",
    "lint-staged": "^9.2.1",
    "prettier": "^1.17.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "typescript": "^3.5.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b packages",
    "lint": "eslint . --ext .tsx --ext .ts",
    "prettier": "prettier --write",
    "clean": "yarn rimraf ./packages/**/dist && yarn rimraf ./packages/**/tsconfig.tsbuildinfo",
    "test": "jest",
    "start": "yarn tsc -b examples/repository & node examples/repository/dist/index.js",
    "fetch-metadata": "yarn workspace @furystack/example-repository odata-fetchr"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "name": "furystack",
  "jest-junit": {
    "suiteName": "FuryStack Jest tests",
    "outputDirectory": "./coverage"
  }
}
