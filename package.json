{
  "private": true,
  "version": "1.0.0-2021-02-10",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.6",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsdoc": "^31.6.1",
    "eslint-plugin-prettier": "^3.3.1",
    "got": "^11.8.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-json-schema-generator": "^0.84.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "scripts": {
    "bumpVersions": "lerna version --no-git-tag-version --include-merged-tags --force-publish",
    "build": "tsc -b packages",
    "lint": "eslint . --ext .tsx --ext .ts",
    "prettier": "prettier --write",
    "clean": "yarn rimraf ./packages/**/dist && yarn rimraf ./packages/**/tsconfig.tsbuildinfo",
    "test": "jest --verbose",
    "test:debug": "jest --verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "name": "furystack",
  "jest-junit": {
    "suiteName": "FuryStack Jest tests",
    "outputDirectory": "./coverage"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
