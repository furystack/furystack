{
  "private": true,
  "version": "8.0.4",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/jsdom": "^27.0.0",
    "@vitest/coverage-istanbul": "^4.0.18",
    "ajv": "^8.18.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^62.6.0",
    "eslint-plugin-playwright": "^2.7.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "ts-json-schema-generator": "^2.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "start": "yarn workspace @furystack/shades-showcase-app start",
    "bumpVersions": "yarn version check --interactive",
    "applyReleaseChanges": "yarn version apply --all && yarn changelog apply && yarn format",
    "build:esm": "tsc -b packages",
    "build:showcase": "yarn build && yarn workspace @furystack/shades-showcase-app build",
    "build": "yarn build:esm && yarn workspace @furystack/yarn-plugin-changelog build:plugin",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "yarn rimraf ./packages/**/(types|esm|tsconfig.tsbuildinfo)",
    "test": "yarn run vitest",
    "test:debug": "yarn run --inspect-brk vitest --runInBand",
    "test:e2e": "yarn workspace @furystack/shades-showcase-app e2e test",
    "create-schemas": "yarn build && yarn ts-json-schema-generator  -f packages/rest-service/tsconfig.json -p packages/rest-service/src/validate.integration.schema.ts -o packages/rest-service/src/validate.integration.spec.schema.json && yarn build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "name": "furystack",
  "engines": {
    "node": ">=22.18.0"
  },
  "packageManager": "yarn@4.12.0"
}
