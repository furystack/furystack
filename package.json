{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": []
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "lerna": "^3.13.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "typescript-tslint-plugin": "^0.3.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b packages",
    "lint": "lerna run lint --parallel",
    "clean": "yarn workspaces run rimraf dist && yarn workspaces run rimraf tsconfig.tsbuildinfo && yarn run rimraf packages/tsconfig.tsbuildinfo",
    "test": "jest",
    "start": "yarn tsc -b examples/repository & node examples/repository/dist/index.js",
    "fetch-metadata": "yarn workspace @furystack/example-repository odata-fetchr"
  },
  "name": "furystack"
}
