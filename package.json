{
  "private": true,
  "version": "3.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitest/coverage-c8": "^0.30.1",
    "ajv": "^8.12.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsdoc": "^43.0.6",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-json-schema-generator": "^1.2.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.0",
    "vitest": "^0.30.1"
  },
  "scripts": {
    "start": "yarn workspace @furystack/shades-showcase-app start",
    "bumpVersions": "yarn version check --interactive",
    "applyVersionBumps": "yarn version apply --all && echo TODO: Upgrade changelogs",
    "build:esm": "tsc -b packages",
    "build:showcase": "yarn build && yarn workspace @furystack/shades-showcase-app build",
    "build": "yarn build:esm",
    "lint": "eslint . --cache --ext .tsx --ext .ts",
    "prettier": "prettier --write",
    "clean": "yarn rimraf ./packages/**/(types|esm|tsconfig.tsbuildinfo)",
    "test": "yarn run vitest",
    "test:debug": "yarn run --inspect-brk vitest --runInBand",
    "create-schemas": "yarn build && yarn ts-json-schema-generator --no-type-check -p packages/rest-service/src/validate.integration.schema.ts -o packages/rest-service/src/validate.integration.spec.schema.json && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "name": "furystack",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.5.0"
}
