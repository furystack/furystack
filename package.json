{
  "private": true,
  "version": "2.2.18",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/jsdom": "^21.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "ajv": "^8.12.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsdoc": "^43.0.6",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-json-schema-generator": "^1.2.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "bumpVersions": "yarn version check --interactive",
    "applyVersionBumps": "yarn version apply --all && echo TODO: Upgrade changelogs",
    "build:cjs": "tsc -b packages",
    "build:esm": "yarn workspaces foreach -t run build:es6 --moduleResolution bundler --module esnext",
    "build": "tsc -b packages && yarn build:esm && yarn workspace @furystack/shades-showcase-app build",
    "lint": "eslint . --cache --ext .tsx --ext .ts",
    "prettier": "prettier --write",
    "clean": "yarn rimraf ./packages/**/(types|dist|esm|tsconfig.tsbuildinfo)",
    "test": "yarn run jest",
    "test:debug": "yarn run --inspect-brk jest --runInBand",
    "create-schemas": "yarn build && yarn ts-json-schema-generator -f tsconfig.json --no-type-check -p packages/rest-service/src/validate.integration.schema.ts -o packages/rest-service/src/validate.integration.spec.schema.json && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "name": "furystack",
  "jest-junit": {
    "suiteName": "FuryStack Jest tests",
    "outputDirectory": "./coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.5.0"
}
