{
  "private": true,
  "version": "1.0.0-2021-05-12",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.10",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "ajv": "^8.4.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^34.6.3",
    "eslint-plugin-prettier": "^3.4.0",
    "got": "^11.8.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-json-schema-generator": "^0.92.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "bumpVersions": "lerna version --no-git-tag-version --include-merged-tags --force-publish",
    "build": "tsc -b packages",
    "lint": "eslint . --ext .tsx --ext .ts",
    "prettier": "prettier --write",
    "clean": "yarn rimraf ./packages/**/dist && yarn rimraf ./packages/**/tsconfig.tsbuildinfo",
    "test": "jest --verbose",
    "test:debug": "jest --verbose",
    "create-schemas": "yarn ts-json-schema-generator -f tsconfig.json --no-type-check -p packages/rest-service/src/validate.integration.schema.ts -o packages/rest-service/src/validate.integration.spec.schema.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "name": "furystack",
  "jest-junit": {
    "suiteName": "FuryStack Jest tests",
    "outputDirectory": "./coverage"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
