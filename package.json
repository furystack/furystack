{
  "private": true,
  "version": "3.0.12",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitest/coverage-v8": "^0.34.6",
    "ajv": "^8.12.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-json-schema-generator": "^1.3.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  },
  "scripts": {
    "start": "npm --workspace=@furystack/shades-showcase-app start",
    "build:esm": "tsc -b packages",
    "build:showcase": "npm run build && npm --workspace=@furystack/shades-showcase-app run build",
    "build": "npm run build:esm",
    "lint": "eslint . --cache --ext .tsx --ext .ts",
    "prettier": "prettier --write",
    "clean": "npm run rimraf ./packages/**/(types|esm|tsconfig.tsbuildinfo)",
    "test": "npm run vitest",
    "test:debug": "npm run --inspect-brk vitest --runInBand",
    "create-schemas": "npm run build && npm run ts-json-schema-generator  -f packages/rest-service/tsconfig.json -p packages/rest-service/src/validate.integration.schema.ts -o packages/rest-service/src/validate.integration.spec.schema.json && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "name": "furystack",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependenciesMeta": {
    "prettier@3.0.2": {
      "unplugged": true
    }
  }
}
