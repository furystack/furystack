{
  "private": true,
  "version": "2.2.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/jsdom": "^20.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "ajv": "^8.12.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jsdoc": "^39.6.7",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^15.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "ts-json-schema-generator": "^1.2.0",
    "typescript": "4.9.4"
  },
  "scripts": {
    "bumpVersions": "yarn version check --interactive",
    "applyVersionBumps": "yarn version apply --all && echo TODO: Upgrade changelogs",
    "build": "tsc -b packages",
    "lint": "eslint . --cache --ext .tsx --ext .ts",
    "prettier": "prettier --write",
    "clean": "yarn rimraf ./packages/**/(types|dist|tsconfig.tsbuildinfo)",
    "test": "yarn run jest",
    "test:debug": "yarn run --inspect-brk jest --runInBand",
    "create-schemas": "yarn build && yarn ts-json-schema-generator -f tsconfig.json --no-type-check -p packages/rest-service/src/validate.integration.schema.ts -o packages/rest-service/src/validate.integration.spec.schema.json && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "name": "furystack",
  "jest-junit": {
    "suiteName": "FuryStack Jest tests",
    "outputDirectory": "./coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.3.1"
}
