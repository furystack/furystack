{
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.14",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "ajv": "^8.10.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-jsdoc": "^37.9.4",
    "eslint-plugin-prettier": "^4.0.0",
    "got": "^11.8.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-json-schema-generator": "^0.98.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "bumpVersions": "yarn version check --interactive",
    "applyVersionBumps": "yarn version apply && echo TODO: Upgrade changelogs",
    "build": "tsc -b packages",
    "lint": "eslint . --cache --ext .tsx --ext .ts",
    "prettier": "prettier --write",
    "clean": "yarn rimraf ./packages/**/dist && yarn rimraf ./packages/**/tsconfig.tsbuildinfo",
    "test": "jest --verbose",
    "test:debug": "jest --verbose",
    "create-schemas": "yarn ts-json-schema-generator -f tsconfig.json --no-type-check -p packages/rest-service/src/validate.integration.schema.ts -o packages/rest-service/src/validate.integration.spec.schema.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "name": "furystack",
  "jest-junit": {
    "suiteName": "FuryStack Jest tests",
    "outputDirectory": "./coverage"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@3.2.0"
}
